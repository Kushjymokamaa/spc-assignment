QUESTION TWO
#prompt the user to enter employee name,hours of work and rate per hour
read-p"Enter employee name:"name
read-p"Enter hours worked:"hours_worked
read-p"Enter rate per hour:"rate_per_hour
#calculate tax
if[$basic_pay-gt 70000];then
tax=$((25*basic_pay/100))
elseif[$basic_pay-ge 15000]&&[$basic_pay-le 7000
tax=$((15*basic_pay/100))
else
tax=0
#calculate net pay
net_pay=$((basic_pay-tax))
#display results
echo"Employee Name:$name"
echo"Basic pay:$basic_pay"
echo"Tax:$tax"
echo"Net pay:$net_pay"

